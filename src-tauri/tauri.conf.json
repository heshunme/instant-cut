{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fast Video Cutter",
  "version": "1.0.0",
  "identifier": "com.fast-video-cutter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": false
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Fast Video Cutter",
        "width": 1200,
        "height": 720,
        "minWidth": 900,
        "minHeight": 580,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  }
}